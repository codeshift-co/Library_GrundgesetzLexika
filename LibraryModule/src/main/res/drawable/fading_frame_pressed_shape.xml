<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/colorWhite"
                android:endColor="@color/colorBurgundy">
            </gradient>
            <corners
                android:radius="@dimen/corner_radius_small"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
            <padding
                android:top="@dimen/stroke_thickness"
                android:left="@dimen/stroke_thickness"
                android:right="@dimen/stroke_thickness"/>
        </shape>
    </item>
    <!-- light burgundy foreground -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/colorWhite"
                android:endColor="@color/colorLightBurgundy"/>
            <corners
                android:radius="@dimen/corner_radius_small"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</layer-list>