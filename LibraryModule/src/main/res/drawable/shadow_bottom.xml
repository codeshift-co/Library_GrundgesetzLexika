<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!--TODO gradient-->
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/colorWhite"
                android:endColor="@color/colorShadow"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="@dimen/shadow_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorFullyTransparent"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>