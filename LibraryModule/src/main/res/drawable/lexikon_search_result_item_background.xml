<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- rectangle for divider at the bottom -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/stroke_thickness" android:color="@color/colorBurgundy"/>
            <padding
                android:bottom="@dimen/stroke_thickness"/>
        </shape>
    </item>
    <!-- rectangle to hide the divider rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
</layer-list>