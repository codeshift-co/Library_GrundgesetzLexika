<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:startOffset="@integer/fragmentAnimationDurationHalf">
    <alpha
        android:duration="@integer/fragmentAnimationDuration"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
    <scale
        android:duration="@integer/fragmentAnimationDuration"
        android:fromXScale="0.8"
        android:fromYScale="0.8"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.01"
        android:toYScale="1.01" />

    <scale
        android:duration="@integer/fragmentAnimationDurationHalf"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="@integer/fragmentAnimationDuration"
        android:toXScale="0.99"
        android:toYScale="0.99" />


</set>