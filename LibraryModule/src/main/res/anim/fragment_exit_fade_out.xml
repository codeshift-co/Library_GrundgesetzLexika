<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <scale
        android:duration="@integer/fragmentAnimationDurationHalf"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.01"
        android:toYScale="1.01" />

    <alpha
        android:duration="@integer/fragmentAnimationDuration"
        android:fromAlpha="1.0"
        android:startOffset="@integer/fragmentAnimationDurationHalf"
        android:toAlpha="0.0" />
    <scale
        android:duration="@integer/fragmentAnimationDuration"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="@integer/fragmentAnimationDurationHalf"
        android:toXScale="0.8"
        android:toYScale="0.8" />
</set>